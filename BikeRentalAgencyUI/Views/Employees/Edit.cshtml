@model EditEmployeeVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden="hidden" contenteditable="false">
                <label asp-for="employee.ID" class="control-label"></label>
                <input asp-for="employee.ID" class="form-control" />
                <span asp-validation-for="employee.ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="employee.ShopID" class="control-label">Assigned Shop</label>
                <select class="dropdown" asp-for="employee.ShopID">
                    @foreach(var shop in Model.rentalShops)
                    {
                        <option class="dropdown-item" value="@shop.ID">@shop.ShopName</option>
                    }
                </select>
                @*<input asp-for="employee.ShopID" class="form-control" />*@
                <span asp-validation-for="employee.ShopID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="employee.FirstName" class="control-label">First Name</label>
                <input asp-for="employee.FirstName" class="form-control" />
                <span asp-validation-for="employee.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="employee.LastName" class="control-label">Last Name</label>
                <input asp-for="employee.LastName" class="form-control" />
                <span asp-validation-for="employee.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="employee.Email" class="control-label"></label>
                <input asp-for="employee.Email" class="form-control" />
                <span asp-validation-for="employee.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
