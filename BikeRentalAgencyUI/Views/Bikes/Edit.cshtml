@model EditBikeVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Bike</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden="hidden" contenteditable="false">
                <label asp-for="bike.ID" class="control-label"></label>
                <input asp-for="bike.ID" class="form-control" />
                <span asp-validation-for="bike.ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="bike.BikeName" class="control-label">Bike Name</label>
                <input asp-for="bike.BikeName" class="form-control" />
                <span asp-validation-for="bike.BikeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="bike.CurrentLocationID" class="control-label">Current Location</label>
                <select class="dropdown" asp-for="bike.CurrentLocationID">
                    @foreach (var shop in Model.rentalShops)
                    {
                        <option class="dropdown-item" value="@shop.ID">@shop.ShopName</option>
                    }
                </select>
                <span asp-validation-for="bike.CurrentLocationID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="bike.isReserved" class="control-label">Reserved?</label>
                <input asp-for="bike.isReserved" class="form-control" />
                <span asp-validation-for="bike.isReserved" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="bike.FrameSize" class="control-label">Frame Size</label>
                <input asp-for="bike.FrameSize" class="form-control" />
                <span asp-validation-for="bike.FrameSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="bike.UnitPrice" class="control-label">Unit Price</label>
                <input asp-for="bike.UnitPrice" class="form-control" />
                <span asp-validation-for="bike.UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
