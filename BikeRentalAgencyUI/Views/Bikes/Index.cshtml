@model BikeIndexVM

@{
    ViewData["Title"] = "Index";
}

<h1>Bikes</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Bike ID
            </th>
            <th>
                Bike Name
            </th>
            <th>
                Current Location
            </th>
            <th>
                Reserved?
            </th>
            <th>
                Frame Size
            </th>
            <th>
                Unit Price
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Bikes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BikeName)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.CurrentLocationID)*@
                    @{
                        foreach (var shop in Model.RentalShops)
                        {
                            if (shop.ID == item.CurrentLocationID)
                            {

                                @shop.ShopName

                            }
                        }
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isReserved)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FrameSize)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    <a asp-controller="Bikes" asp-action="Edit" asp-route-BikeID="@item.ID">Edit </a>|
                    <a asp-controller="Bikes" asp-action="Details" asp-route-BikeID="@item.ID">Details </a>|
                    <a asp-controller="Bikes" asp-action="Delete" asp-route-BikeID="@item.ID">Delete </a>|
                    @*@Html.ActionLink("Edit", "Edit", item.ID) |*@
                    @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                    @*@Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Index" asp-controller="LoggedIn">Back to Administrator Home Page</a>
</div>