@model EditBikeVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Bike</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.bike.ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.bike.ID)
        </dd>
        <dt class="col-sm-2">
            Bike Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.bike.BikeName)
        </dd>
        <dt class="col-sm-2">
            Current Location
        </dt>
        <dd class="col-sm-10">
            @foreach (var shop in Model.rentalShops)
            {
                if (shop.ID == Model.bike.CurrentLocationID)
                {
                    @shop.ShopName
                }
            }
        </dd>
        <dt class="col-sm-2">
            Reserved?
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.bike.isReserved)
        </dd>
        <dt class="col-sm-2">
            Frame Size
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.bike.FrameSize)
        </dd>
        <dt class="col-sm-2">
            Unit Price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.bike.UnitPrice)
        </dd>
    </dl>
</div>
<div>
    <a asp-controller="Bikes" asp-action="Edit" asp-route-BikeID="@Model.bike.ID">Edit </a> |
    <a asp-action="Index">Back to List</a>
</div>
