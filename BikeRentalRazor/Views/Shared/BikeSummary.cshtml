@model Bike;
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.BikeName
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>@Model.UnitPrice.ToString("c")</small>
            </span>
        </h4>
    </div>
    <div class="card-text p-1">Current Store: @Model.CurrentLocationID</div>
    <div class="card-text p-1">Frame Size: @Model.FrameSize</div>
    @if (Model.isReserved)
    {
        <div class="card-text p-1">Availability: Reserved</div>
    }
    @if (!Model.isReserved)
    {
        <div class="card-text p-1">Availability: Available</div>
    }

</div>