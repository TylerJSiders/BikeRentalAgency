@model BikeListViewModel
<h2>Check out now</h2>
<p>Please enter your details, and we'll reserve your sweet rides!</p>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Checkout" method="post">
    <div class="form-group">
        <label>First Name:</label><input asp-for="Customer.FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Last Name:</label><input asp-for="Customer.LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Phone Number:</label><input asp-for="Customer.PhoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label>Email:</label><input asp-for="Customer.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Pickup Location</label>
        <select asp-for="Reservation.LocationStart" class="form-control">
            @foreach (RentalShop location in Model.Shops)
            {
                <option value="@location.ID">@location.ShopName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Dropoff Location</label>
        <select asp-for="Reservation.LocationEnd" class="form-control">
            @foreach (RentalShop location in Model.Shops)
            {
                <option value="@location.ID">@location.ShopName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Pickup Date:</label><input asp-for="Reservation.PickupDate" class="form-control" />
    </div>
    <div class="form-group">
        <label>Return Date:</label><input asp-for="Reservation.ReturnDate" class="form-control" />
    </div>
    @*<h3>Options</h3>
    <div class="checkbox">
        <label>
            <input asp-for="Reservation.SpecialFeatures" /> Would you like additional features?
        </label>
    </div>*@
    <div class="form-group">
        <label>Payment Type</label>
        <select asp-for="Reservation.PaymentType" class="form-control">
            <option value="Visa">Visa</option>
            <option value="MasterCard">MasterCard</option>
            <option value="American Express">American Express</option>
            <option value="PayPal">PayPal</option>
        </select>
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Complete Order" />
    </div>
</form>
